@{
    ViewData["Title"] = "Home Page";
}

<section class="hero">
    <div class="hero-content">
        <h1>Welcome to LUXEDRIVE – Your Trusted Car Partner</h1>
        <p>We're passionate about making car ownership and rentals easy and transparent, delivering a hassle-free experience for all your car needs.</p>
    </div>
</section>

<section class="about-us">
    <div class="about-us-container">
        <!-- Image Left -->
        <div class="about-us-item">
            <img src="images/clientWorker.jpg" alt="About Us Image 1" class="about-us-image">
        </div>

        <!-- Content Center -->
        <div class="about-us-item about-us-content">
            <h2>About <span class="highlight">Us</span></h2>
            <p>Your trusted source for buying or renting cars. We offer a wide selection, transparent pricing, and flexible financing options, all designed to make your experience smooth and hassle-free.</p>
            <a href="#learn-more" class="btn-learn-more">Learn More</a>
        </div>

        <!-- Image Right -->
        <div class="about-us-item">
            <img src="images/ppInCar.jpg" alt="About Us Image 2" class="about-us-image">
        </div>
    </div>

    <!-- Logos Section -->
    <div class="about-us-logos">
        <img src="images/bmw-logo.png" alt="Logo 1">
        <img src="images/vw-logo.jpg" alt="Logo 2">
        <img src="images/audi-logo.png" alt="Logo 3">
        <img src="images/toyota-logo.jpg" alt="Logo 4">
        <img src="images/skoda-logo.webp" alt="Logo 5">
    </div>
</section>
