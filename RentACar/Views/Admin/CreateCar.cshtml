@model CarViewModel

@{
    ViewData["Title"] = "Create Car";
}

<div class="create-car-container">
    <h1>Create a New Car</h1>

    <!-- Form with updated action -->
    <form asp-action="CreateCarSave" asp-controller="Admin" method="post">
        <div class="form-group">
            <label asp-for="LicensePlateNumber" class="control-label">License Plate Number</label>
            <input asp-for="LicensePlateNumber" class="form-control" />
            <span asp-validation-for="LicensePlateNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Brand" class="control-label">Brand</label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model" class="control-label">Model</label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="YearOfManufacture" class="control-label">Year of Manufacture</label>
            <input asp-for="YearOfManufacture" type="date" class="form-control" />
            <span asp-validation-for="YearOfManufacture" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsRented" class="control-label">Is Rented</label>
            <select asp-for="IsRented" class="form-control">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
            <span asp-validation-for="IsRented" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PricePerDay" class="control-label">Price Per Day</label>
            <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="PricePerDay" class="text-danger"></span>
        </div>

        <!-- Updated button -->
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Cars" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
    </form>
</div>
